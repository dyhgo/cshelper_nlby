<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hhu.cshelper">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Black"
        android:authorities="com.hhu.cshelper.fileprovider">
        <activity android:name=".activity.system.UserInfoActivity"/>
        <activity android:name=".activity.system.SettingActivity"/>
        <activity android:name=".activity.system.LoginSignActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name=".activity.web.WebSingleActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.web.PrivateWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.web.TabWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.web.SingleNightWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.web.FullWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.web.FreeWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".activity.code.CodeEditActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activity.code.CodeShowActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>

        <activity android:name=".activity.web.StarHistoryDetailActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activity.web.StarHistoryActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activity.web.StarSortActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activity.system.GuidePageActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.activity.BaseActivity" />
        <activity android:name=".ui.activity.NoteDetailActivity" />
        <activity android:name=".ui.activity.MainActivity"/>
        <activity android:name=".ui.activity.SearchActivity"/>


        <activity android:name=".activity.web.BBSWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.web.CodeWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.web.DataWebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>

        <activity android:name=".activity.system.AboutPageActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"></activity>
    </application>
</manifest>